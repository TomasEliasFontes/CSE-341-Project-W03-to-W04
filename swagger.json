  "definitions": {
    "Movie": {
      "type": "object",
      "properties": {
        "_id": {
          "type": "string",
          "example": "507f1f77bcf86cd799439011"
        },
        "title": {
          "type": "string",
          "example": "Inception"
        },
        "director": {
          "type": "string",
          "example": "Christopher Nolan"
        },
        "releaseYear": {
          "type": "number",
          "example": 2010
        },
        "genre": {
          "type": "string",
          "example": "Sci-Fi"
        },
        "synopsis": {
          "type": "string",
          "example": "Un ladrón roba secretos corporativos…"
        },
        "duration": {
          "type": "number",
          "example": 148
        },
        "rating": {
          "type": "number",
          "example": 8.8
        }
      }
    },
    "Review": {
      "type": "object",
      "properties": {
        "_id": {
          "type": "string",
          "example": "507f1f77bcf86cd799439012"
        },
        "movieId": {
          "type": "string",
          "example": "507f1f77bcf86cd799439011"
        },
        "reviewer": {
          "type": "string",
          "example": "Laura"
        },
        "rating": {
          "type": "number",
          "example": 5
        },
        "comment": {
          "type": "string",
          "example": "Excelente película"
        },
        "date": {
          "type": "string",
          "example": "2025-07-21T12:34:56.789Z"
        }
      }
    }
  }
